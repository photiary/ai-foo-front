{
  "openapi": "3.1.0",
  "info": {
    "title": "OpenAPI definition",
    "version": "v0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Generated server url"
    }
  ],
  "tags": [
    {
      "name": "Chat",
      "description": "Chat completion API"
    },
    {
      "name": "Food",
      "description": "Food image analysis API"
    },
    {
      "name": "Models",
      "description": "Model info proxy API"
    }
  ],
  "paths": {
    "/v1/food/analysis": {
      "get": {
        "tags": [
          "Food"
        ],
        "summary": "List all analyses",
        "description": "Get all stored food analyses",
        "operationId": "getList",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/FoodAnalysisResponse"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Food"
        ],
        "summary": "Analyze a meal image",
        "description": "Uploads a food image with user's status and returns analyzed foods with macros, calories, and positions.",
        "operationId": "analyze",
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "image": {
                    "type": "string",
                    "format": "binary"
                  }
                },
                "required": [
                  "image"
                ]
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FoodAnalysisResponse"
                }
              }
            }
          }
        }
      }
    },
    "/v1/chat": {
      "post": {
        "tags": [
          "Chat"
        ],
        "summary": "Chat completion",
        "description": "Calls OpenAI /v1/chat/completions and returns the full response once completed.",
        "operationId": "chat",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ChatRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ChatResponse"
                }
              }
            }
          }
        }
      }
    },
    "/v1/models": {
      "get": {
        "tags": [
          "Models"
        ],
        "summary": "List available models",
        "description": "Proxies upstream OpenAI-compatible /v1/models and returns the JSON response.",
        "operationId": "listModels",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/v1/food/analysis/{id}": {
      "get": {
        "tags": [
          "Food"
        ],
        "summary": "Get analysis detail",
        "description": "Get stored food analysis by id",
        "operationId": "getDetail",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FoodAnalysisResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BillingInfo": {
        "type": "object",
        "properties": {
          "inputCost": {
            "type": "number"
          },
          "outputCost": {
            "type": "number"
          },
          "totalCost": {
            "type": "number"
          },
          "currency": {
            "type": "string"
          }
        }
      },
      "FoodAnalysisResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "foods": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/FoodItem"
            }
          },
          "suitability": {
            "type": "string"
          },
          "suggestion": {
            "type": "string"
          },
          "usage": {
            "$ref": "#/components/schemas/UsageInfo"
          },
          "billing": {
            "$ref": "#/components/schemas/BillingInfo"
          }
        }
      },
      "FoodItem": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "protein": {
            "type": "number",
            "format": "double"
          },
          "carbs": {
            "type": "number",
            "format": "double"
          },
          "fat": {
            "type": "number",
            "format": "double"
          },
          "calories": {
            "type": "number",
            "format": "double"
          },
          "position": {
            "$ref": "#/components/schemas/Position"
          }
        }
      },
      "Position": {
        "type": "object",
        "properties": {
          "x": {
            "type": "integer",
            "format": "int32"
          },
          "y": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "UsageInfo": {
        "type": "object",
        "properties": {
          "promptTokens": {
            "type": "integer",
            "format": "int32"
          },
          "completionTokens": {
            "type": "integer",
            "format": "int32"
          },
          "totalTokens": {
            "type": "integer",
            "format": "int32"
          },
          "modelName": {
            "type": "string"
          },
          "requestDurationMs": {
            "type": "integer",
            "format": "int64"
          }
        }
      },
      "ChatRequest": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string"
          }
        }
      },
      "ChatResponse": {
        "type": "object",
        "properties": {
          "response": {
            "type": "string"
          }
        }
      }
    }
  }
}